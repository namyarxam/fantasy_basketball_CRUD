<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Players</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <%- include ../partials/nav.html.ejs %>
  <body>
    <div class="player-container">
      <ul class="playerlist">
        <% playerList.forEach(function(player) { %>
          <div class="player-div">
            <li><%= player.name %></li>
            <li><%= player.position %></li>
            <li><%= player.ppg %> PPG</li>
            <li><img class="playerpic" src="<%= player.img_url %>"></li>
          </div>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
