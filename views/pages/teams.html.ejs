<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teams</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <%- include ../partials/nav.html.ejs %>
  <body>
    <div class="team-container">
      <ul class="teamlist">
        <% teams.forEach(function(team) { %>
          <li class="teamname"><%= team.name %></li>
          <form class="editform" action="/teams/<%= team.teamid %>/edit" method="get">
            <input type="submit" value="EDIT">
          </form>
          <form class="deleteform" action="/teams/<%= team.teamid %>?_method=DELETE" method="post">
            <input type="hidden" name="id" value="<%= team.teamid %>">
            <input type="submit" value="DELETE">
          </form>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
