      </form>
      <form class="sg-search" action="/teams/<%= id %>/sg" method="get">
        <input type="submit" value="View SG">
      </form>
      <form class="sg-search" action="/teams/<%= id %>/edit" method="post">
        <input type="hidden" name="pos" value="<%= playerList[4].position %>">
        <input type="hidden" name="playerid" value="<%= playerList[4].playerid %>">
        <input type="hidden" name="price" value="<%= playerList[4].price %>">
        <input type="submit" value="Reset SG">
      </form>
    </div>

    <div class="edit-div">
      <p><%= playerList[3].name %></p>
      <img class="playerpic" src="<%= playerList[3].img_url %>">
      <form class="sf-search" action="/teams/<%= id %>/sf/edit/" method="get">
        <input type="submit" value="Edit SF">
      </form>
      <form class="sf-search" action="/teams/<%= id %>/sf/" method="get">
        <input type="submit" value="View SF">
      </form>
      <form class="sf-search" action="/teams/<%= id %>/edit" method="post">
        <input type="hidden" name="pos" value="<%= playerList[3].position %>">
        <input type="hidden" name="playerid" value="<%= playerList[3].playerid %>">
        <input type="hidden" name="price" value="<%= playerList[3].price %>">
        <input type="submit" value="Reset SF">
      </form>
    </div>

    <div class="edit-div">
      <p><%= playerList[1].name %></p>
      <img class="playerpic" src="<%= playerList[1].img_url %>">
      <form class="pf-search" action="/teams/<%= id %>/pf/edit" method="get">
        <input type="submit" value="Edit PF">
      </form>
      <form class="pf-search" action="/teams/<%= id %>/pf" method="get">
        <input type="submit" value="View PF">
      </form>
      <form class="pf-search" action="/teams/<%= id %>/edit" method="post">
        <input type="hidden" name="pos" value="<%= playerList[1].position %>">
        <input type="hidden" name="playerid" value="<%= playerList[1].playerid %>">
        <input type="hidden" name="price" value="<%= playerList[1].price %>">
        <input type="submit" value="Reset PF">
      </form>
    </div>

    <div class="edit-div">
      <p><%= playerList[0].name %></p>
      <img class="playerpic" src="<%= playerList[0].img_url %>">
      <form class="c-search" action="/teams/<%= id %>/c/edit" method="get">
        <input type="submit" value="Edit C">
      </form>
      <form class="c-search" action="/teams/<%= id %>/c" method="get">
        <input type="submit" value="View C">
      </form>
      <form class="c-search" action="/teams/<%= id %>/edit" method="post">
        <input type="hidden" name="pos" value="<%= playerList[0].position %>">
        <input type="hidden" name="playerid" value="<%= playerList[0].playerid %>">
        <input type="hidden" name="price" value="<%= playerList[0].price %>">
        <input type="submit" value="Reset C">
      </form>
    </div>

    <div class="edit-div">
      <form class="deleteform" action="/teams/<%= id %>?_method=DELETE" method="post">
        <input type="hidden" name="id" value="<%= id %>">
        <input type="submit" value="DELETE">
      </form>
    </div>

  </body>
</html>
