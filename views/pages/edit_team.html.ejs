<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teams</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <%- include ../partials/nav.html.ejs %>
  <body class="editbody">
    <div class="budget-container">
      <p class="budget">BUDGET: <%= budget[0].budget %></p>
    </div>

    <div class="edit-div">
      <p><%= playerList[2].name %></p>
      <img class="playerpic" src="<%= playerList[2].img_url %>">
      <form class="pg-search" action="/teams/<%= id %>/pg/edit" method="get">
        <input type="submit" value="Edit PG">
      </form>
      <form class="pg-search" action="/teams/<%= id %>/pg" method="get">
        <input type="submit" value="View PG">
      </form>
      <form class="pg-search" action="/teams/<%= id %>/edit" method="post">
        <input type="hidden" name="pos" value="<%= playerList[2].position %>">
        <input type="hidden" name="playerid" value="<%= playerList[2].playerid %>">
        <input type="hidden" name="price" value="<%= playerList[2].price %>">
        <input type="submit" value="Reset PG">
      </form>
    </div>

    <div class="edit-div">
      <p><%= playerList[4].name %></p>
      <img class="playerpic" src="<%= playerList[4].img_url %>">
